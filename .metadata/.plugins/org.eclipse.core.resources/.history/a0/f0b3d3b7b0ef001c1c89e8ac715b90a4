package com.pranav.populate.entity;

import javax.persistence.Entity;
import javax.persistence.Table;

@Entity
@Table(name="questions")
public class Quiz {
	
	private int id;
	private String question;
	private String description;
	private int optionId;
	private boolean multipleAnswers;
	private int correctAnswerId;
	private String correctAnswer;
	private String explanation;
	private String tip;
	private int tagId;
	private String category;
	private String difficulty;
	
	public Quiz() {}

	public Quiz(int id, String question, String description, int optionId, boolean multipleAnswers, int correctAnswerId,
			String correctAnswer, String explanation, String tip, int tagId, String category, String difficulty) {
		super();
		this.id = id;
		this.question = question;
		this.description = description;
		this.optionId = optionId;
		this.multipleAnswers = multipleAnswers;
		this.correctAnswerId = correctAnswerId;
		this.correctAnswer = correctAnswer;
		this.explanation = explanation;
		this.tip = tip;
		this.tagId = tagId;
		this.category = category;
		this.difficulty = difficulty;
	}

	public int getId() {
		return id;
	}

	public void setId(int id) {
		this.id = id;
	}

	public String getQuestion() {
		return question;
	}

	public void setQuestion(String question) {
		this.question = question;
	}

	public String getDescription() {
		return description;
	}

	public void setDescription(String description) {
		this.description = description;
	}

	public int getOptionId() {
		return optionId;
	}

	public void setOptionId(int optionId) {
		this.optionId = optionId;
	}

	public boolean isMultipleAnswers() {
		return multipleAnswers;
	}

	public void setMultipleAnswers(boolean multipleAnswers) {
		this.multipleAnswers = multipleAnswers;
	}

	public int getCorrectAnswerId() {
		return correctAnswerId;
	}

	public void setCorrectAnswerId(int correctAnswerId) {
		this.correctAnswerId = correctAnswerId;
	}

	public String getCorrectAnswer() {
		return correctAnswer;
	}

	public void setCorrectAnswer(String correctAnswer) {
		this.correctAnswer = correctAnswer;
	}

	public String getExplanation() {
		return explanation;
	}

	public void setExplanation(String explanation) {
		this.explanation = explanation;
	}

	public String getTip() {
		return tip;
	}

	public void setTip(String tip) {
		this.tip = tip;
	}

	public int getTagId() {
		return tagId;
	}

	public void setTagId(int tagId) {
		this.tagId = tagId;
	}

	public String getCategory() {
		return category;
	}

	public void setCategory(String category) {
		this.category = category;
	}

	public String getDifficulty() {
		return difficulty;
	}

	public void setDifficulty(String difficulty) {
		this.difficulty = difficulty;
	}
	
	
	

}
